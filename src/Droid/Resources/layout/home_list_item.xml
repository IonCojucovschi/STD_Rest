<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapp_item_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_dimens_height"
    android:background="#ffffff">
    <FFImageLoading.Views.ImageViewAsync
        android:id="@+id/item_list_image"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop" />
    <View
        android:id="@+id/view_item_home"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#90000000" />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/text_home_item_margin_left"
        android:layout_marginBottom="@dimen/text_home_item_margin_bottom"
        android:id="@+id/item_list_text"
        android:text="PAge Name"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
</RelativeLayout>