<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_100_in_dp"
    android:paddingLeft="@dimen/margin_5_in_dp"
    android:weightSum="10"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/event_cell_root_view"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="20">
        <LinearLayout
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:weightSum="2">
            <FFImageLoading.Views.ImageViewAsync
                android:id="@+id/event_image"
                android:src="@drawable/feedback_home_icon"
                android:layout_height="@dimen/margin_50_in_dp"
                android:layout_width="@dimen/margin_50_in_dp"
                android:scaleType="fitXY" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_marginLeft="@dimen/margin_10_in_dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/event_name_text"
                android:text="Order at table or bar"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="7.5" />
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2.5">
                <TextView
                    android:id="@+id/hour_time_item_event"
                    android:text="21:30"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" />
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/full_data_detail_container"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/container_date_text"
                        android:text="21:30"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />
                    <TextView
                        android:id="@+id/container_time_text"
                        android:text="21:30"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>