<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="667">
            <LinearLayout
                android:id="@+id/header_root_view"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="64"
                android:weightSum="375"
                android:gravity="start">
                <LinearLayout
                    android:id="@+id/left_button_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="52"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="64">
                    <FFImageLoading.Views.ImageViewAsync
                        android:id="@+id/left_button_image"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="271"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/header_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="HEADER"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/right_button_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="52"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="52">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:weightSum="52"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="35">
                            <FFImageLoading.Views.ImageViewAsync
                                android:id="@+id/right_button_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/margin_count_item_chart"
                                android:src="@drawable/abc_ratingbar_material" />
                            <TextView
                                android:id="@+id/order_number"
                                android:layout_height="wrap_content"
                                android:layout_width="@dimen/margin_20_in_dp"
                                android:text="10"
                                android:gravity="center"
                                android:textSize="@dimen/margin_13_in_dp"
                                android:paddingRight="@dimen/view_code_dimen_lat"
                                android:paddingLeft="@dimen/view_code_dimen_lat"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/bottom_line_header"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#000000" />
            <FrameLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="603" />
            <LinearLayout
                android:id="@+id/footer_base"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:weightSum="375"
                android:gravity="center">
                <TextView
                    android:id="@+id/footer_base_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Footer" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/side_menu_root_view"
        android:layout_width="@dimen/menu_width"
        android:background="#F05522"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="667">
            <LinearLayout
                android:layout_weight="64"
                android:orientation="vertical"
                android:layout_width="@dimen/menu_width"
                android:layout_height="0dp"
                android:id="@+id/menu_touch_area">
                <FFImageLoading.Views.ImageViewAsync
                    android:layout_marginLeft="@dimen/menu_icons_padding"
                    android:padding="@dimen/margin_10_in_dp"
                    android:id="@+id/menu_image_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:id="@+id/menu_line_item"
                android:background="#000000" />
            <Int.Droid.Factories.Adapter.RecyclerView.BaseRecyclerView
                android:id="@+id/side_menu_list"
                android:layout_weight="603"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>