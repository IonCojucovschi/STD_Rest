<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_250_in_dp"
    android:layout_height="@dimen/margin_200_in_dp"
    android:weightSum="10"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/wrapp_cell_content"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#D7000000"
            android:layout_margin="@dimen/margin_10_in_dp" />
        <FFImageLoading.Views.ImageViewAsync
            android:id="@+id/image_service_feedback"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/margin_20_in_dp" />
        <TextView
            android:id="@+id/service_name_text"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/margin_36_in_dp"
            android:layout_width="@dimen/margin_150_in_dp"
            android:gravity="center"
            android:text="Service Name" />
    </RelativeLayout>
</LinearLayout>