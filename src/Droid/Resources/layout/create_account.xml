<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <FFImageLoading.Views.ImageViewAsync
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_30_in_dp"
            android:layout_marginRight="@dimen/margin_30_in_dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:weightSum="667">
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="67"
                android:gravity="center">
                <TextView
                    android:id="@+id/create_account_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create an account" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="120"
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="10">
                <TextView
                    android:id="@+id/email_label"
                    android:text="Email"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@null" />
                <EditText
                    android:id="@+id/email_value"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent" />
                <View
                    android:id="@+id/email_underline"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="120"
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="10">
                <TextView
                    android:id="@+id/password_label"
                    android:text="Password"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@null" />
                <EditText
                    android:id="@+id/pasword_value"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent" />
                <View
                    android:id="@+id/password_underline"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="120"
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="10">
                <TextView
                    android:id="@+id/password_repeat_label"
                    android:text="Repeat Password"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@null" />
                <EditText
                    android:id="@+id/pasword_repeat_value"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:layout_width="match_parent" />
                <View
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent" />
                <View
                    android:id="@+id/password_repeat_underline"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_weight="180"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/privaci_polici"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="privasy policy" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/sign_up_text"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Sign up" />
    </LinearLayout>
</RelativeLayout>