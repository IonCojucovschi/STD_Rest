<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#e3e3e3">
    <Int.Droid.Factories.Adapter.RecyclerView.BaseRecyclerView
        android:paddingLeft="@dimen/margin_5_in_dp"
        android:paddingRight="@dimen/margin_5_in_dp"
        android:background="#e3e3e3"
        android:id="@+id/orderbar_list_view"
        android:layout_weight="7"
        android:layout_height="0dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/table_number_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#000000"
                android:text="Table no." />
            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5" />
            <TextView
                android:id="@+id/table_value_number_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#000000"
                android:text="27" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/change_button_touch_area"
                android:layout_height="@dimen/menu_width"
                android:layout_width="@dimen/menu_width"
                android:weightSum="10"
                android:orientation="vertical">
                <FFImageLoading.Views.ImageViewAsync
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_10_in_dp"
                    android:paddingLeft="@dimen/margin_10_in_dp"
                    android:paddingRight="@dimen/margin_10_in_dp"
                    android:id="@+id/change_image_item"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="6" />
                <TextView
                    android:id="@+id/change_text_item"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:text="Change" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/confrim_order"
        android:layout_weight="1"
        android:background="#000000"
        android:text="Confirm" />
</LinearLayout>