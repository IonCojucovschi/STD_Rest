<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_chart_height"
    android:layout_marginTop="@dimen/margin_5_in_dp"
    android:weightSum="10"
    android:gravity="center">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/wrapp_item_content"
        android:weightSum="20">
        <FFImageLoading.Views.ImageViewAsync
            android:layout_margin="@dimen/image_item_margin_lists"
            android:gravity="center"
            android:id="@+id/item_image"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5" />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:weightSum="10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:id="@+id/item_name"
                    android:layout_height="0dp"
                    android:text="Berr name"
                    android:layout_width="wrap_content"
                    android:textColor="#000000" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:layout_height="0dp"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/quantity_item"
                        android:text="3.15x4"
                        android:textColor="#000000"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/price_item"
                android:text="$14"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>