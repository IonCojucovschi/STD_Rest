<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_250_in_dp"
    android:layout_height="@dimen/margin_180_in_dp"
    android:weightSum="10"
    android:layout_margin="@dimen/margin_8_in_dp"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:id="@+id/wrapper_tag2_content">
        <FFImageLoading.Views.ImageViewAsync
            android:id="@+id/tag2_event_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/margin_24_in_dp"
            android:src="@drawable/feedback_home_icon" />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_10_in_dp"
            android:layout_height="@dimen/margin_50_in_dp"
            android:layout_width="@dimen/margin_210_in_dp">
            <FFImageLoading.Views.ImageViewAsync
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/date_image_background"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_5_in_dp"
                android:orientation="horizontal"
                android:weightSum="20">
                <TextView
                    android:id="@+id/tag2_name_value"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15_in_dp"
                    android:layout_width="0dp"
                    android:layout_weight="19"
                    android:lines="2"
                    android:gravity="fill"
                    android:text="Che b" />
                <FFImageLoading.Views.ImageViewAsync
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_8_in_dp"
                    android:layout_marginBottom="@dimen/margin_8_in_dp"
                    android:id="@+id/image_date_separator" />
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_marginRight="@dimen/margin_8_in_dp"
                        android:id="@+id/hour_time_event"
                        android:text="21:30"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:id="@+id/full_data_detail_container"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="10">
                        <RelativeLayout
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:layout_width="wrap_content">
                            <TextView
                                android:paddingRight="@dimen/margin_10_in_dp"
                                android:id="@+id/container_date_text"
                                android:text="21:30"
                                android:gravity="center"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#000000"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" />
                            <TextView
                                android:layout_marginRight="@dimen/margin_5_in_dp"
                                android:id="@+id/container_time_text"
                                android:text="21:30"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>