<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#e3e3e3">
    <Int.Droid.Factories.Adapter.RecyclerView.BaseRecyclerView
        android:paddingLeft="@dimen/margin_5_in_dp"
        android:paddingRight="@dimen/margin_5_in_dp"
        android:background="#e3e3e3"
        android:id="@+id/orderbar_list_view"
        android:layout_weight="8"
        android:layout_height="0dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:id="@+id/wrapper_order_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_code_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Table no." />
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5" />
        <TextView
            android:id="@+id/order_code_value_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="27" />
    </LinearLayout>
</LinearLayout>