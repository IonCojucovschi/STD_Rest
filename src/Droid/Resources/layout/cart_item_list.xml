<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_chart_height"
    android:layout_marginTop="@dimen/margin_5_in_dp"
    android:weightSum="10"
    android:gravity="center">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/wrapp_item_content"
        android:weightSum="20">
        <FFImageLoading.Views.ImageViewAsync
            android:gravity="center"
            android:layout_margin="@dimen/margin_10_in_dp"
            android:id="@+id/item_image"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5" />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:weightSum="10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="4">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:id="@+id/item_name"
                    android:layout_height="wrap_content"
                    android:text="Berr name"
                    android:layout_width="wrap_content"
                    android:textColor="#000000" />
                <ImageView
                    android:layout_marginRight="@dimen/margin_10_in_dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:id="@+id/item_garbadge_img"
                    android:layout_height="@dimen/garbadge_dimens"
                    android:layout_width="@dimen/garbadge_dimens" />
            </RelativeLayout>
            <View
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent" />
            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="5">
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/minus_item"
                        android:text="-"
                        android:textColor="#000000"
                        android:layout_height="@dimen/margin_30_in_dp"
                        android:layout_width="@dimen/margin_30_in_dp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/quantity_item"
                        android:text="3.15x4"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/margin_10_in_dp"
                        android:layout_marginRight="@dimen/margin_10_in_dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/plus_item"
                        android:text="+"
                        android:textColor="#000000"
                        android:layout_height="@dimen/margin_30_in_dp"
                        android:layout_width="@dimen/margin_30_in_dp" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/margin_10_in_dp"
                    android:layout_marginRight="@dimen/margin_10_in_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:id="@+id/price_item"
                    android:text="$14"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>