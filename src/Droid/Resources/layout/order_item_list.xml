<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_chart_height"
    android:padding="@dimen/margin_5_in_dp"
    android:weightSum="10"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/order_cell_root_view"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="20">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="6">
            <TextView
                android:layout_marginLeft="@dimen/margin_10_in_dp"
                android:id="@+id/order_number_id"
                android:layout_height="match_parent"
                android:text="#12"
                android:gravity="center"
                android:layout_width="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:weightSum="10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/type_of_order"
                android:text="Order at table or bar"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:id="@+id/order_time_item"
                android:text="12.04.2018/21:30"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4">
            <TextView
                android:id="@+id/order_price_item"
                android:layout_marginRight="@dimen/margin_10_in_dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="$24.00" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>